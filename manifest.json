{
    "name": "__MSG_extension_name__",
    "version": "1.0.0",
    "description": "__MSG_extension_description__",
    "manifest_version": 3,
    "author": "Abdulrahman huwais",
    "permissions": ["activeTab","storage"],
    "default_locale": "en",
    "action":{
      "default_icon": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"},
        "default_popup": "popup/popup.html",
        "default_title": "Scrolling"
    },
    "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"},
      "content_scripts": [
        {
            "js": ["scripts/content-script.js"],
            "matches": ["http://*/*", "https://*/*"],
            "runAt": "document_end"
        }
      ]
}

